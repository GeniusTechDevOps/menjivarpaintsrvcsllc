---
import type { RootObject } from "../../interfaces/dbData";
import Animated from "../animaciones/Animation";
interface Props {
  data: RootObject;
}

const { data } = Astro.props;
---

<section class="flex justify-center items-center bg-white mt-20 py-16">
  <div
    class="w-4/5 mx-auto flex flex-col md:flex-row items-center justify-start"
  >
    <div class="w-full md:w-2/5">
      <img
        src={data.gallery[1]}
        alt="img-values"
        class="w-full h-[380px] md:h-[780px] object-cover -mt-10"
      />
    </div>
    <div class="w-full md:w-3/5 p-4 md:p-8 text-slate-500">
      <Animated animation="fade-down" duration={2000} delay={500}>
        <div>
          <p
            class="p-2 rounded-2xl bg-white text-secondary font-bold w-full md:w-1/3 text-center"
          >
            Why Choose Us <i class="fa-light fa-handshake text-xl"></i>
          </p>
          <h2
            class="px-0 md:px-4 font-extrabold text-tertiary text-3xl md:text-5xl text-center md:text-start capitalize"
          >
            {data.slogan[6]}
          </h2>
          <p class="px-0 md:px-8 pt-5 pb-7 text-center md:text-start">
            {data.valuesContent.whychooseUs}
          </p>
        </div>
      </Animated>

      <Animated animation="fade-up" duration={2400} easing="linear" delay={300}>
        <div
          class="flex flex-col md:flex-row justify-start items-center rounded-l-3xl gap-2 ml-0 md:-ml-44 bg-slate-100 p-2 md:p-8"
        >
          <div class="flex flex-col justify-center items-start w-full md:w-1/2">
            <div class="w-full flex justify-start items-center">
              <div
                class="flex flex-col justify-center items-center space-y-1 w-1/3"
              >
                <i
                  class="fa-solid fa-shield-halved px-3.5 py-3 rounded-full text-white bg-primary text-3xl"
                ></i>
                <div class="h-5 md:h-8 border-l-2 border-dashed border-primary">
                </div>
              </div>
              <p class="text-secondary font-bold text-3xl">Mission</p>
            </div>
            <div
              class="w-full bg-white rounded-2xl p-5 flex justify-center items-center h-auto md:h-[200px]"
            >
              <p>{data.valuesContent.mission}</p>
            </div>
          </div>
          <div class="flex flex-col justify-center items-start w-full md:w-1/2">
            <div class="w-full flex justify-start items-center">
              <div
                class="flex flex-col justify-center items-center space-y-1 w-1/3"
              >
                <i
                  class="fa-solid fa-bullseye-arrow px-3.5 py-3 rounded-full text-white bg-tertiary text-3xl"
                ></i>
                <div class="h-5 md:h-8 border-l-2 border-dashed border-primary">
                </div>
              </div>
              <p class="text-secondary font-bold text-3xl">Vision</p>
            </div>
            <div
              class="w-full bg-white rounded-2xl p-5 flex justify-center items-center h-auto md:h-[200px]"
            >
              <p>{data.valuesContent.vision}</p>
            </div>
          </div>
        </div>
      </Animated>
    </div>
  </div>
</section>
